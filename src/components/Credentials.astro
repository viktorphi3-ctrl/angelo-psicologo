---
import { GraduationCap, BookOpen, Award } from "lucide-react";

// Credentials Data
const credentials = [
  {
    institution: "UEL",
    fullInstitution: "Universidade Estadual de Londrina",
    title: "Graduado em Psicologia",
    type: "Psicologia",
    icon: GraduationCap,
  },
  {
    institution: "PUC",
    fullInstitution: "Pontifícia Universidade Católica",
    title: "Pós Graduando em Psicanálise",
    type: "e Análise do Contemporâneo",
    icon: BookOpen,
  },
  {
    institution: "UEM",
    fullInstitution: "Universidade Estadual de Maringá",
    title: "Mestrando em Psicologia",
    type: "Mestrado",
    icon: Award,
  }
];
---

<section class="py-16 md:py-24 lg:py-32 bg-ana-offwhite border-t border-ana-terracotta-suave/10">
  <div class="container mx-auto px-6">
    <div class="flex flex-col items-center text-center mb-24">
      <h2 class="font-playfair text-3xl md:text-4xl text-ana-text mb-6">
        Minha Formação
      </h2>
      <div class="w-16 h-0.5 bg-ana-terracotta-suave/50 rounded-full"></div>
    </div>

    <div class="grid md:grid-cols-3 gap-10 md:gap-12 max-w-6xl mx-auto">
      {credentials.map((cred) => (
        <div class="group relative bg-ana-beige p-8 rounded-xl border border-transparent hover:border-ana-terracotta-suave/20 transition-all duration-300 hover:shadow-lg hover:shadow-ana-terracotta-suave/5 h-full flex flex-col justify-center">
          <div class="absolute inset-0 bg-white/60 opacity-0 group-hover:opacity-100 transition-opacity rounded-xl"></div>
          
          <div class="relative z-10 flex flex-col items-center text-center">
            <div class="mb-6 p-5 bg-ana-offwhite rounded-full text-ana-terracotta-suave group-hover:bg-ana-terracotta-suave group-hover:text-white transition-colors duration-300 shadow-sm">
              <cred.icon className="size-10" strokeWidth={1.25} />
            </div>
            
            <h3 class="font-playfair text-xl text-ana-text mb-1 font-medium">
              {cred.title}
            </h3>
             <p class="font-playfair text-lg text-ana-text/90 mb-4 block min-h-[1.5em]">
              {cred.type}
            </p>
            
            <div class="w-12 h-px bg-ana-terracotta-suave/40 my-4"></div>
            
            <p class="font-inter text-sm md:text-base text-ana-text/80 italic font-medium">
              {cred.fullInstitution}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
